<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meaningText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/meaning_shape"
    android:padding="16dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/definition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/definition"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/definitionExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/definition_example"
        android:textSize="14sp"
        android:textColor="@color/sky_blue"
        app:layout_constraintTop_toBottomOf="@id/definition"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/definitionExampleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/definitionExample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/definitionExample"
        android:layout_marginLeft="5dp"
        android:text="@string/definition_example_text"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>